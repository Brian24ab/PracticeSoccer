<ScrollView>
    <StackLayout Padding="20" Spacing="15">
        <!-- Today's Summary -->
        <Frame CornerRadius="15" BackgroundColor="{StaticResource CardBackground}">
            <StackLayout>
                <Label Text="Today's Practice" FontSize="18" FontAttributes="Bold"/>
                <Label Text="{Binding TodaysMinutes, StringFormat='{0} minutes completed'}"/>
                <ProgressBar Progress="{Binding WeeklyProgress}"/>
                <Label Text="{Binding WeeklyGoalStatus}" HorizontalOptions="Center"/>
            </StackLayout>
        </Frame>

        <!-- Calendar -->
        <Label Text="Training Calendar" FontSize="18" FontAttributes="Bold"/>
        <Calendar
            SelectedDates="{Binding CompletedDates}"
            SelectionMode="Multiple"
            DisabledTextColor="Gray">
            <Calendar.DayView>
                <DataTemplate>
                    <BoxView Color="{Binding IsCompleted, Converter={StaticResource CompletedColorConverter}}"/>
                </DataTemplate>
            </Calendar.DayView>
        </Calendar>

        <!-- Quick Start -->
        <Button Text="Start 30-Min Session" 
                Command="{Binding StartSessionCommand}"
                BackgroundColor="{StaticResource Primary}"/>
    </StackLayout>
</ScrollView>