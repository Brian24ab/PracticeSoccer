<!-- LogSessionPage.xaml -->
<StackLayout>
    <Picker Title="Drill Type" 
            ItemsSource="{Binding DrillTypes}"
            SelectedItem="{Binding SelectedDrillType}"/>
    
    <Entry Placeholder="Duration (minutes)" 
           Keyboard="Numeric"
           Text="{Binding Duration}"/>
           
    <Button Text="Log Session" 
            Command="{Binding LogSessionCommand}"/>
</StackLayout>