<!-- ProgressPage.xaml -->
<VerticalStackLayout>
    <!-- Streak Counter -->
    <Frame CornerRadius="20" BackgroundColor="#FF4081" Padding="15">
        <Label Text="{Binding CurrentStreak}" 
               FontSize="48" 
               HorizontalOptions="Center"
               TextColor="White"/>
        <Label Text="Day Streak" 
               HorizontalOptions="Center"
               TextColor="White"/>
    </Frame>

    <!-- Session History -->
    <CollectionView ItemsSource="{Binding RecentSessions}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid ColumnDefinitions="*,*">
                    <Label Text="{Binding DrillType}" />
                    <Label Text="{Binding Date, StringFormat='{0:MMM dd}'}" 
                           Grid.Column="1" HorizontalOptions="End"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</VerticalStackLayout>